@model IEnumerable<Sparta_Global_Profile.Models.Skill>

@{
    ViewData["Title"] = "Index";
}

<h1>All you skills</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SkillName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SkillName)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Profile.ProfileId)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.SkillId">Edit</a> |
                @*<a asp-action="Details" asp-route-id="@item.SkillId">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.SkillId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<a href="~/profile"><button>Back to your profile</button></a>
