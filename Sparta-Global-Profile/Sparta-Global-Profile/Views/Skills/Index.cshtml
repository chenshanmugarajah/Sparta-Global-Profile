@model IEnumerable<Sparta_Global_Profile.Models.Skill>

@{
    ViewData["Title"] = "Skills - " + ViewBag.ProfileName;
}

@if ("All" == ViewBag.Type)
{
    <h1>All Skills</h1>
    <p>
        <a asp-action="Create"><button>Create Skill</button></a>
    </p>
}
else
{
    <h1>@ViewBag.ProfileName's skills</h1>
}

@if (Model.Count() <= 8 && ViewBag.Type == "Student")
{
    <p>
        <a asp-action="Create" asp-route-id=@ViewBag.ProfileId><button>Create Skill</button></a>
    </p>
}
@if (Model.Count() != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Profile Name
                </th>
                <th>
                    Skill Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Profile.ProfileName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SkillName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.SkillId"><button>Edit</button></a>
                        <a asp-action="Delete" asp-route-id="@item.SkillId"><button>Delete</button></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>You have no skills listed at the moment</h3>
}

<a asp-controller="profile" asp-action="edit" asp-route-id="@ViewBag.ProfileId"><button>Back to Edit Profile</button></a>
