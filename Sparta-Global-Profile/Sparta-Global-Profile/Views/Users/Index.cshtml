@model IEnumerable<Sparta_Global_Profile.Models.User>

@{
    ViewData["Title"] = "Index";
}
<div class="adminpanel-section">
    <h1 class="admin">Admin Panel</h1>

    <p>
        <a asp-action="Create"><button>Create New User</button></a>
    </p>

    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                Search by Name: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" /> |
                <a asp-action="Index">Back to Full List</a>
            </p>
        </div>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserEmail)
                </th>

                <th>
                    User Type
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserEmail)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.UserType.UserTypeName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.UserId"><button>Edit </button> </a>
                        <a asp-action="Details" asp-route-id="@item.UserId"><button>Details </button> </a>
                        <a asp-action="Delete" asp-route-id="@item.UserId"><button>Delete </button> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>