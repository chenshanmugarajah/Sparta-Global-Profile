@model Sparta_Global_Profile.Models.User;

@{
    Layout = null;
}

<DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>
        .login{
            position:absolute;
            left:40%;
            top:40%;
            border: 1px solid #ccc;
            padding: 10px 10px;
        }
        .field-validation-error{
            color:red;
        }
    </style>
</head>
<body>
    <div class="login">
        @using (Html.BeginForm("Authorize", "Login", FormMethod.Post))
        {
            <table>
                <tr>
                    <td></td>
                    <td style="text-decoration:underline">Login</td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.UserEmail)
                    </td>
                    <td>
                        @Html.EditorFor(model => model.UserEmail)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>@Html.ValidationMessageFor(model => model.UserEmail)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.UserPassword)</td>
                    <td>@Html.EditorFor(model => model.UserPassword)</td>
                </tr>
                <tr>
                    <td></td>
                    <td>@Html.ValidationMessageFor(model => model.UserPassword)</td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" name="name" value="Login" />
                        <input type="reset" name="name" value="Clear" />
                    </td>
                </tr>
            </table>
        }
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>
</DOCTYPE>
