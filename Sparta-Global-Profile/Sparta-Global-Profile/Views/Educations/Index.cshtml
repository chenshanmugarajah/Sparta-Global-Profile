@model IEnumerable<Sparta_Global_Profile.Models.Education>

@{
    ViewData["Title"] = "Education - " + ViewBag.ProfileName;
}

@if ("All" == ViewBag.Type)
{
    <h1>All Education Histories</h1>
    <p>
        <a asp-action="Create"><button>Add Education</button></a>
    </p>
}
else
{
    <h1>@ViewBag.ProfileName's education history</h1>
}

@if (ViewBag.Type == "Student")
{
    <p>
        <a asp-action="Create" asp-route-id=@ViewBag.ProfileId><button>Add Eduction History</button></a>
    </p>
}
@if (Model.Count() != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Profile Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Establishment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Qualification)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Grade)
                </th>
                <th>
                    Start Date
                </th>
                <th>
                    End Date
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Profile.ProfileName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Establishment)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Qualification)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Grade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.EducationId"><button>Edit</button></a>
                        <a asp-action="Delete" asp-route-id="@item.EducationId"><button>Delete</button></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>You have no education history listed at the moment</h3>
}

<a asp-controller="profile" asp-action="edit" asp-route-id="@ViewBag.ProfileId"><button>Back to Edit Profile</button></a>
