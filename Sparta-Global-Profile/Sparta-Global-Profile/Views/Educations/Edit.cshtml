@model Sparta_Global_Profile.Models.Education

@{
    ViewData["Title"] = "Edit Education";
}

<div class="profile-section">

    <h1>Edit</h1>

    <h4>Education</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="EducationId" />
                <div class="form-group">
                    <label asp-for="ProfileId" class="control-label">Profile Name</label>
                    <select asp-for="ProfileId" class="form-control" asp-items="ViewBag.ProfileId"></select>
                    <span asp-validation-for="ProfileId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Establishment" class="control-label"></label>
                    <input asp-for="Establishment" class="form-control" />
                    <span asp-validation-for="Establishment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Qualification" class="control-label"></label>
                    <input asp-for="Qualification" class="form-control" />
                    <span asp-validation-for="Qualification" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Grade" class="control-label"></label>
                    <input asp-for="Grade" class="form-control" />
                    <span asp-validation-for="Grade" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label">Start Date</label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label">End Date</label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <h5 style="text-decoration:underline">Modules</h5>
    @if (Model.Modules.Count() != 0)
    {
        <ul>
            @foreach (var module in Model.Modules)
            {
                <li>@module.CourseYear: @module.ModuleName</li>
            }
        </ul>
        <a asp-controller="modules" asp-action="index" asp-route-id="@Model.EducationId"><button>Edit Modules</button></a>
        <a asp-controller="modules" asp-action="create" asp-route-id="@Model.EducationId"><button>Add Module</button></a>
    }
    else
    {
        <p class="spartaBrightPink">You have currently have no modules added for this establishment</p>
        <a asp-controller="modules" asp-action="create" asp-route-id="@Model.EducationId"><button>Add Module</button></a>
    }
    <br />
    <br />
    <div>
        <a asp-action="Index" asp-route-id="@ViewBag.Profile.ProfileId"><button>Back to Education List</button></a>
        <a asp-controller="Profile" asp-action="Edit" asp-route-id="@ViewBag.Profile.ProfileId"><button>Back to Edit Profile</button></a>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
