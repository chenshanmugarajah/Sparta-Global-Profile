@model Sparta_Global_Profile.Models.Education

@{
    ViewData["Title"] = "Delete";
}

<div class="profile-section">

    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Education</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Profile Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Profile.ProfileName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Establishment)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Establishment)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Qualification)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Qualification)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Grade)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Grade)
            </dd>
            <dt class="col-sm-2">
                Start Date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StartDate)
            </dd>
            <dt class="col-sm-2">
                End Date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EndDate)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="EducationId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
        <br />
        <div>
            <a asp-action="Index" asp-route-id="@ViewBag.Profile.ProfileId"><button>Back to Education List</button></a>
            <a asp-controller="Profile" asp-action="Edit" asp-route-id="@ViewBag.Profile.ProfileId"><button>Back to Edit Profile</button></a>
        </div>
    </div>

</div>