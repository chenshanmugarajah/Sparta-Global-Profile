@model Sparta_Global_Profile.Models.SpartaProject

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this project?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Profile Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Profile.ProfileName)
        </dd>
        <dt class="col-sm-2">
            Project Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectName)
        </dd>
        <dt class="col-sm-2">
            Project Description:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectBio)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SpartaProjectId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <br />
    <div>
        <a asp-action="Index" asp-route-id="@ViewBag.Profile.ProfileId"><button>Back to Projects</button></a>
        <a asp-controller="Profile" asp-action="Edit" asp-route-id="@ViewBag.Profile.ProfileId"><button>Back to Edit Profile</button></a>
    </div>
</div>
