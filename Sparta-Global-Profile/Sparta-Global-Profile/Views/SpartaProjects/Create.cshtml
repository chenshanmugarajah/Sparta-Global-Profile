@model Sparta_Global_Profile.Models.SpartaProject

@{
    ViewData["Title"] = "Create Project";
}

<div class="profile-section">

    <h1>Create</h1>

    <h4>Sparta Project</h4>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ProfileId" class="control-label">Profile Name</label>
                    <select asp-for="ProfileId" class="form-control" asp-items="ViewBag.ProfileId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ProjectName" class="control-label">Project Name</label>
                    <input asp-for="ProjectName" class="form-control" />
                    <span asp-validation-for="ProjectName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProjectBio" class="control-label">Project Description</label>
                    <textarea asp-for="ProjectBio" class="form-control" rows="10"></textarea>
                    <span asp-validation-for="ProjectBio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <br />
    @if (ViewBag.Profile != "0")
    {
        <div>
            <a asp-action="Index" asp-route-id="@ViewBag.Profile"><button>Back to Projects</button></a>
            <a asp-controller="Profile" asp-action="Edit" asp-route-id="@ViewBag.Profile"><button>Back to Edit Profile</button></a>
        </div>
    }
    else
    {
        <div>
            <a asp-action="Index"><button>Back to Skills</button></a>
        </div>
    }

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}