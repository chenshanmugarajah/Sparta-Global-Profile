@model Sparta_Global_Profile.Models.Assignment

@{
    ViewData["Title"] = "Delete Assignment";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this assignment?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Profile Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Profile.ProfileName)
        </dd>
        <dt class="col-sm-2">
            Company Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompanyName)
        </dd>
        <dt class="col-sm-2">
            Position:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position)
        </dd>
        <dt class="col-sm-2">
            Summary:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Summary)
        </dd>
        <dt class="col-sm-2">
            Start Date:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            End Date:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AssignmentId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <br />
    <div>
        <a asp-action="Index" asp-route-id="@ViewBag.Profile.ProfileId"><button>Back to Skills</button></a>
        <a asp-controller="Profile" asp-action="Edit" asp-route-id="@ViewBag.Profile.ProfileId"><button>Back to Edit Profile</button></a>
    </div>

</div>
