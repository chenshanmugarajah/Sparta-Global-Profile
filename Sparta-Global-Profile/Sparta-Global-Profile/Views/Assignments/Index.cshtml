@model IEnumerable<Sparta_Global_Profile.Models.Assignment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Summary)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Profile.ProfileId)
                    </td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AssignmentId">Edit</a> |
                    @*<a asp-action="Details" asp-route-id="@item.AssignmentId">Details</a>*@ |
                    <a asp-action="Delete" asp-route-id="@item.AssignmentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="~/profile"><button>Back to your profile</button></a>

