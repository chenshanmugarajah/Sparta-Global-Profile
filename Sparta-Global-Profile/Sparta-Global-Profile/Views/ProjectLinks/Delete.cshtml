@model Sparta_Global_Profile.Models.ProjectLink

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this project link?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Project Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SpartaProject.ProjectName)
        </dd class>
        <dt class = "col-sm-2">
            Link Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LinkText)
        </dd>
        <dt class = "col-sm-2">
            Url
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Url)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProjectLinkId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-controller="spartaprojects" asp-action="Index" asp-route-id="@ViewBag.ProjectId">Back to Projects</a>
    </form>
</div>
