@model Sparta_Global_Profile.Models.ProjectLink

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ProjectLink</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProjectLinkId" />
            <div class="form-group">
                <label asp-for="SpartaProjectId" class="control-label">Project Name</label>
                <select asp-for="SpartaProjectId" class="form-control" asp-items="ViewBag.SpartaProjectId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LinkText" class="control-label">Link Name</label>
                <input asp-for="LinkText" class="form-control" />
                <span asp-validation-for="LinkText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url" class="control-label">Url</label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="spartaprojects" asp-action="Index" asp-route-id="@ViewBag.ProjectId">Back to Projects</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
