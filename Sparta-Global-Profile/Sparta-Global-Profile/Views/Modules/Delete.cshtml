@model Sparta_Global_Profile.Models.Module

@{
    ViewData["Title"] = "Delete Module";
}

<div class="profile-section">

    <h1>Delete</h1>

    <h3>Are you sure you want to delete this module?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Establishment
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Education.Establishment)
            </dd>
            <dt class="col-sm-2">
                Module Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ModuleName)
            </dd>
            <dt class="col-sm-2">
                Course Year
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CourseYear)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ModuleId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
        <br />
        <div>
            <a asp-action="Index" asp-route-id="@ViewBag.Education.EducationId"><button>Back to Modules</button></a>
            <a asp-controller="Profile" asp-action="Edit" asp-route-id="@ViewBag.Profile.ProfileId"><button>Back to Edit Profile</button></a>
        </div>
    </div>

</div>