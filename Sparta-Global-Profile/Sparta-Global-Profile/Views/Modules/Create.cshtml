@model Sparta_Global_Profile.Models.Module

@{
    ViewData["Title"] = "Create Module";
}

<h1>Create</h1>

<h4>Module</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EducationId" class="control-label">Establishment</label>
                <select asp-for="EducationId" class="form-control" asp-items="ViewBag.EducationId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ModuleName" class="control-label">Module Name</label>
                <input asp-for="ModuleName" class="form-control" />
                <span asp-validation-for="ModuleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseYear" class="control-label">Course Year</label>
                <input asp-for="CourseYear" class="form-control" />
                <span asp-validation-for="CourseYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
@if (ViewBag.Profile != "0")
{
    <div>
        <a asp-action="Index" asp-route-id="@ViewBag.Education"><button>Back to Modules</button></a>
        <a asp-controller="Profile" asp-action="Edit" asp-route-id="@ViewBag.Profile"><button>Back to Edit Profile</button></a>
    </div>
}
else
{
    <div>
        <a asp-action="Index"><button>Back to Skills</button></a>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
