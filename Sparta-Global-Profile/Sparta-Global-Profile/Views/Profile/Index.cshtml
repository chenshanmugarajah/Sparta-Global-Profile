@*@model IEnumerable<Sparta_Global_Profile.Models.Profile>*@
@model Sparta_Global_Profile.Controllers.PaginatedList<Sparta_Global_Profile.Models.Profile>
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Index";
    var userTypeId = Context.Session.GetString("UserTypeId");
}

<h1>Index</h1>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find By Course: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<div class="indexContainer">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card h-100">
                <img class="card-img-top" height="200" width="325" src="@item.ProfilePicture" alt="">
                <div class="card-body">
                    <h4 class="card-title">@Html.DisplayFor(modelItem => item.ProfileName)</h4>
                    <p class="card-text"> @Html.DisplayFor(modelItem => item.Course.CourseName)</p> 
                </div>
                <div class="card-footer">
                    <a asp-action="Details" asp-route-id="@item.ProfileId" class="btn btn-primary">Details</a>
                    @if (userTypeId != "1" && userTypeId != "2")
                    {
                        @if(item.Approved) { <a class="btn btn-primary">Approved</a> } else { <a class="btn btn-primary">Unapproved</a>}
                    }
                </div>
            </div>
        </div>
    }
</div>

@{
    var previousDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @previousDisabled">Previous</a>

<a asp-action="Index"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">Next</a>