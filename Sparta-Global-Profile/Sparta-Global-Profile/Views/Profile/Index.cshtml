@*@model IEnumerable<Sparta_Global_Profile.Models.Profile>*@
@model Sparta_Global_Profile.Controllers.PaginatedList<Sparta_Global_Profile.Models.Profile>
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Index";
    var userTypeId = Context.Session.GetString("UserTypeId");
}

<h1>Index</h1>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find By Course: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Profile Name
            </th>
            <th>
                Profile Image
            </th>
            <th>
                Course
            </th>
            @if (userTypeId != "1" && userTypeId != "2")
            {
                <th>
                    Approved
                </th>
            }
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProfileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfilePicture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
            @if (userTypeId != "1" && userTypeId != "2")
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Approved)
                </td>
            }
                <td>
                    <a asp-action="Details" asp-route-id="@item.ProfileId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var previousDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @previousDisabled">Previous</a>

<a asp-action="Index"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">Next</a>