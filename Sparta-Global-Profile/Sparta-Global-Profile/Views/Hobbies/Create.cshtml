@model Sparta_Global_Profile.Models.Hobby

@{
    ViewData["Title"] = "Create Hobby";
}

<h1>Create</h1>

<h4>Hobby</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HobbyName" class="control-label">Hobby Name</label>
                <input asp-for="HobbyName" class="form-control" />
                <span asp-validation-for="HobbyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HobbyDescription" class="control-label">Description</label>
                <input asp-for="HobbyDescription" class="form-control" />
                <span asp-validation-for="HobbyDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfileId" class="control-label">Profile Name</label>
                <select asp-for="ProfileId" class="form-control" asp-items="ViewBag.ProfileId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
@if (ViewBag.Profile != "0")
{
    <div>
        <a asp-action="Index" asp-route-id="@ViewBag.Profile"><button>Back to Hobbies</button></a>
        <a asp-controller="Profile" asp-action="Edit" asp-route-id="@ViewBag.Profile"><button>Back to Edit Profile</button></a>
    </div>
}
else
{
    <div>
        <a asp-action="Index"><button>Back to Hobbies</button></a>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
