@model Sparta_Global_Profile.Models.Hobby

@{
    ViewData["Title"] = "Delete";
}

<div class="profile-section">

    <h1>Delete</h1>

    <h3>Are you sure you want to delete this hobby?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Hobby Name:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.HobbyName)
            </dd>
            <dt class="col-sm-2">
                Description:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.HobbyDescription)
            </dd>
            <dt class="col-sm-2">
                Profile Name:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Profile.ProfileName)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="HobbyId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
        <br />
        <div>
            <a asp-action="Index" asp-route-id="@ViewBag.Profile.ProfileId"><button>Back to Hobbies</button></a>
            <a asp-controller="Profile" asp-action="Edit" asp-route-id="@ViewBag.Profile.ProfileId"><button>Back to Edit Profile</button></a>
        </div>
    </div>
    
</div>