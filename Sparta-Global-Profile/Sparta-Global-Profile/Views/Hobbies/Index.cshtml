@model IEnumerable<Sparta_Global_Profile.Models.Hobby>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HobbyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HobbyDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HobbyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HobbyDescription)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Profile.ProfileId)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.HobbyId">Edit</a> |
                @*<a asp-action="Details" asp-route-id="@item.HobbyId">Details</a>*@ |
                <a asp-action="Delete" asp-route-id="@item.HobbyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="Index"><button>View all hobbies</button></a>
    <a asp-controller="profile" asp-action="details"><button>Back to Profile</button></a>
</div>